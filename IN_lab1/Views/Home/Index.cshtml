@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center align-items-center h-100">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <form method="post" enctype="multipart/form-data" action="/Authorization/Login">
            <partial name="~/Views/Shared/_UserForm.cshtml" />
            <button class="w-100 btn btn-lg btn-primary" type="submit">Log In</button>
        </form>
        <div class="row justify-content-center form-outline">
            <div class="col-sm-12">
                <p>@TempData["AuthError"]</p>
            </div>
        </div>
        <hr class="hr my-3" />
        <div class="text-center">
            <a class="w-100 btn btn-lg btn-success" asp-area="" asp-controller="Authorization" asp-action="Signup">Create new account</a>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/user-form-script.js"></script>
}